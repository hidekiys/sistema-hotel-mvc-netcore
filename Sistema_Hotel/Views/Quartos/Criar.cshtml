@model QuartoModel
<div class="text-left">
    <h1 class="display-4 text-center">Check-In</h1>
    <form asp-controller="Quartos" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="hospede" class="form-label">Hospede</label>
            <div class="row">
                <div class="col-1"></div>
            </div>
            <input type="text" asp-for="AtualCPF" class="form-control col ms-2" placeholder="Insira o CPF do hospede" />
        </div>
        <br />
        <div class="form-floating">
            <select asp-for="Tipo" class="form-select" disabled id="floatingSelect" aria-label="Floating label select example">
                <option value="1000" selected>Básico</option>
                <option value="1500">Suite</option>
                <option value="3000">Suite Master</option>
            </select>
            <label for="floatingSelect">Selecione o tipo do quarto</label>
        </div>
        </select>
        <br />
        <div class="row">
            <div class="form-group col">
                <label for="numQuarto"  class="form-label">Quarto</label>
                <input type="text" asp-for="NumQuarto" disabled class="form-control w-33" placeholder="Insira o quarto">
            </div>
            <div class="form-group col">
                <label for="checkIn" class="form-label">Data do check-in:</label>
                <input type="date" asp-for="DataIn" required class="form-control w-33">
            </div>
            <div class="form-group col">
                <label for="checkIn" class="form-label">Data do check-out:</label>
                <input type="date" asp-for="DataOut" class="form-control w-33">
            </div>
        </div>
        <br />
        <input type="hidden" asp-for="Status" value="true" />
        <a type="button" asp-controller="Quartos" asp-action="Index" class="btn btn-secondary">Voltar</a>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

</div>
