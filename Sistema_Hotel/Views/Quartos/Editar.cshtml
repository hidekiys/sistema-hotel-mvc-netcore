@model QuartoModel

<div class="text-left">
    <h1 class="display-4 text-center">Check-Out</h1>
    <form asp-controller="Quartos" asp-action="CheckingOut" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="hospede" class="form-label">Hospede</label>
            <div class="row">
                <input type="text" disabled class="form-control col ms-2" value="@Model.AtualNome">
            </div>
            <br />
            <select asp-for="Tipo" class="form-select" disabled id="floatingSelect" aria-label="Floating label select example">
                <option value="1000" selected>Básico</option>
                <option value="1500">Suite</option>
                <option value="3000">Suite Master</option>
            </select>
        </div>
        <br />
        <div class="row">
            <div class="form-group col">
                <label for="numQuarto" class="form-label">Quarto</label>
                <input type="text" disabled asp-for="NumQuarto" class="form-control w-33" placeholder="Insira o quarto">
            </div>
            <div class="form-group col">
                <label for="checkIn" class="form-label">Data do check-in:</label>
                <input type="date" disabled asp-for="DataIn" class="form-control w-33">
            </div>
            <div class="form-group col">
                <label for="checkIn" class="form-label">Data do check-out:</label>
                <input type="date" asp-for="DataOut" class="form-control w-33">
            </div>
        </div>
        <br />
        <input type="hidden" asp-for="Status" value="false" />
        <a type="button" asp-controller="Quartos" asp-action="Index" class="btn btn-secondary">Voltar</a>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

</div>


<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Novo Hospede</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="fechar">Fechar</button>
                <button type="button" class="btn btn-primary" id="salvar">Salvar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(function () {
            
            $("#MyModal").modal();
            $("#fechar").modal('hide');
        });
    </script>
}
